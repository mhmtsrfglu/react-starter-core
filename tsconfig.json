{
	"compilerOptions": {
		"target": "ES6",
		"diagnostics": false,
		"module": "commonjs",
		"lib": ["dom", "esnext"],
		"declaration": true,
		"declarationMap": true,
		"jsx": "react",
		"strict": true,
		"pretty": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"baseUrl": "./",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"skipLibCheck": true,
		"paths": {
			"*": ["node_modules/*"],
			"src/*": ["src/*"]
		}
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*", ".webpack/**/*"]
}
